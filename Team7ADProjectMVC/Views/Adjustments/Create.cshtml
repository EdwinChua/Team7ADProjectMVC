<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@model Team7ADProjectMVC.Models.Adjustment

@{
    ViewBag.Title = "Create";
    Layout = "~/_Layout1.cshtml";
    Page.Title = "Inventory Adjustment";
}

<h2>Create New</h2>
<hr />

@using Team7ADProjectMVC.Extensions
@using (Html.BeginForm())
{ @Html.AntiForgeryToken()
    <div class="jumbotron">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h3>Adjustment</h3>
            @Html.EditorFor(x => x)

        </div>

        @*<input type="button" id="add-detail" value="Add" />*@
        <h3>Adjustment Detail</h3>
        <table class="table table-bordered table-condensed table-hover table-responsive table-striped">
            <thead>
                <tr>
                    <td>
                        <label class="control-label">ItemNo</label>
                    </td>
                    <td>
                        <label class="control-label">Quantity</label>
                    </td>
                    <td>
                        <label class="control-label">Reason</label>
                    </td>
                </tr>
                <tr>

                    <td>
                        <button class="btn-sm btn-danger" style="border-radius: 50%; background-color: red;" name="add" type="button" id="add-detail">+</button>
                    </td>
                    <td id="detail-list">
                        @Html.EditorForMany(x => x.AdjustmentDetails, x => x.Index)
                    </td>
                </tr>
            </thead>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>



<script>
    jQuery(document).ready(function ($) {
        $('#add-detail').on('click', function () {
            jQuery.get('/Adjustments/AddDetail').done(function (html) {
                $('#detail-list').append(html);
            });

        });
    });
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#detail-list').on('click', '.delete-detail', function () {
            var EntryToRemove = $(this).closest('.editorRow');
            EntryToRemove.prev('input[type=hidden]').remove();
            EntryToRemove.remove();
        });

    });
</script>
