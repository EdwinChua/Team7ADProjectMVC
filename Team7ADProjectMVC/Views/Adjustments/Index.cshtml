@model IEnumerable<Team7ADProjectMVC.Adjustment>

@{
    ViewBag.Title = "Index";
    Layout = "~/_Layout1.cshtml";
    Page.Title = "Inventory Adjustment";
}

<h2>Adjustment Voucher</h2>
<hr /> 
<div class="container-fluid">
    <div class="row jumbotron">
        <form role="form">
            <div class="col-lg-3 form-group">
                <select id="categoryPicker" name="category"
                        class="selectpicker show-tick form-control"
                        data-live-search="true" required multiple title="Raised by/Authorizing Staff">
                    <optgroup label="Authorizing Staff">
                        <option>Tan Lee Meng</option>
                        <option>Vivi Ee</option>
                        <option>Kelly Klarkson</option>
                    </optgroup>
                    <optgroup label="Applying Staff">
                        <option>Justin Beiber</option>
                        <option>Peter Chao</option>
                        <option>Taylor Slow</option>
                    </optgroup>
                </select>
            </div>
            <div class="col-lg-3 form-group">
                <div class="form-group">
                    <div class='input-group date' id='datetimepicker1'>
                        <input type='text' class="form-control" placeholder="Date Issued" name="date" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 form-group">
                <select id="statusPicker" name="status"
                        class="selectpicker form-control"
                        data-live-search="true" required title="Status">
                    <option>Approved</option>
                    <option>Pending</option>
                    <option>Rejected</option>
                </select>
            </div>
            <div class="col-lg-2 form-group">
                <select id="voucherValuePicker" name="voucherValue"
                        class="selectpicker show-tick form-control"
                        data-live-search="true" required title="Voucher value">
                    <option>Below $250 </option>
                    <option>$250 and Above</option>
                </select>
            </div>
            <div class="col-lg-1">
                <button class="btn btn-default" type="submit">
                    Search
                </button>
            </div>
            <div class="col-lg-1">
                <button class="btn btn-primary" type="button" onclick="window.location.href='CreateNewAdjustment'">
                    Create New
                </button>
            </div>
        </form>
    </div>


    <table class="table">
        <tr>
            <th>
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupervisorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupervisorAuthorizedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeadId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeadAuthorizedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.EmployeeName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AdjustmentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupervisorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupervisorAuthorizedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HeadId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HeadAuthorizedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.EmployeeName)
                </td>
                <td>
                    
                    @Html.ActionLink("Details", "Details", new { id = item.AdjustmentId }) 
                    
                </td>
            </tr>
        }

    </table>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker();
        });
    </script>