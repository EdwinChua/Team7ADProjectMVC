@model Team7ADProjectMVC.Requisition
@{
    ViewBag.Title = "Approve/Reject Requisition";
    Layout = "~/_Layout1.cshtml";
}

    <form id="form1" @*action="MarkAsCollected"*@>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h5>
                        Requisition Form#: DDS/111/999
                        </h5>
                        <div>
                            
                            Dept Name:@Html.DisplayFor(model => model.Employee.Department.DepartmentName)
                            <div>
                                <h5>

                                 
                                    Employee Name:@Html.DisplayFor(model => model.Employee.EmployeeName)
                                    <br />
                                    <br />
                                    Employee Number:@Html.DisplayFor(model => model.Employee.EmployeeId)
                                    <br />
                                    <br />
                                    Employee Email Address:<a href="mailto:Address:Jenny@LogicUniversity">@Html.DisplayFor(model => model.Employee.Email)</a>
                                    <br />
                                    <br />
                                    <br />
                                    <br />

                                </h5>
                            </div>
                        </div>
                        <span class="label label-default"></span>
                        <table class="table">
                            <thead>
                                <tr>
                                    
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Quantity
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                @foreach (var item in Model.RequisitionDetails)
                                {
                                    <tr>
                                        <td>
                                            @item.Inventory.Description
                                        </td>
                                        <td>
                                            @item.Quantity
                                        </td>
                                        
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <h5>
                            Comment:
                        </h5>
                        <p>
                            &nbsp;<input type="text" id="TextArea1" aria-autocomplete="none" aria-disabled="False" aria-multiline="True" aria-multiselectable="True" aria-orientation="vertical" name="textcomments" rows="3" cols="50"></inputtextarea>
                        </p>

                    @*<input type="hidden" value="@Model.RequisitionId" name="rid" />
                    <input type="submit" class="btn btn-success btn-lg" value="Approve" />
                    <input type="submit" class="btn btn-danger btn-lg" value="Reject" />*@
                    <a href="/Head/ApproveRequisition/@Model.RequisitionId"> 
                        <button type="button" class="btn btn-success btn-lg">
                            Approve
                        </button></a>

                    <a href="/Head/RejectRequisition/@Model.RequisitionId">
                        <button type="button" class="btn btn-danger btn-lg">
                            Reject
                        </button>
                    </a>
                </div>
            </div>

        </div>
    </form>

