$(function() {

    $('input[type="button"]').click(function (e) {

        var row = $(this).closest('tr');

        row.remove();

    })
})




// Add a new row when Add Task button is clicked
function addNewRow() {
    var option = $('#lecturerId').val();
    var qty = $('#QTY').val();
    var numRows = $('#taskTable tr').length;
    $('#taskTable').append('<tr id="myTableRow">\
           <td>' + option + '</td>\
           <td><input type="text" id="description-' + numRows + '" placeholder="Task Description" value="'+ qty+'"/></td>\
           <td><button type="button" class="removebutton" title="Remove this row">Delete</button></td>\
           </tr>\
   ');
}

