@model IEnumerable<Team7ADProjectMVC.DisbursementDetail>

@{
    ViewBag.Title = "ViewDisbursementDetail";
    Layout = "~/_Layout1.cshtml";
    Page.Title = "Disbursement List for " + @ViewBag.DisbursementList.Department.DepartmentName;
}

<h3>Collection Point: @ViewBag.Cpname (@ViewBag.Cptime)</h3>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionDetail.ItemNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequisitionDetail.Inventory.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveredQuantity)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RequisitionDetail.ItemNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequisitionDetail.Inventory.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveredQuantity)
            </td>



        </tr>
    }

</table>
<hr />
<h3></h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            <div class="form-actions no-color">
                <input type="submit" value="Conform" class="btn btn-default" />

            </div>
        </div>
        
    </div>
}
<br/>
<br/>
@Html.ActionLink("Back to List", "Index")
