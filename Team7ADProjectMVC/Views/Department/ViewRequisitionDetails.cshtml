@model Team7ADProjectMVC.Requisition
@{
    Page.Title = "View Requisition Details";
    Layout = "~/Views/Shared/_LayoutD.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h3>
                    Department:  @Html.DisplayFor(model => model.Employee.Department.DepartmentName)

                </h3>
                <h3>
                    EmployeeId:  @Html.DisplayFor(model => model.Employee.EmployeeName)

                </h3>
                <h3>
                    OrderedDate:  @Html.DisplayFor(model => model.OrderedDate)
                </h3>
            </div>
            
            <h3>
                Item List:
            </h3>

            <table class="table">
                <thead>

                    <tr>
                        <th>
                            ItemNo
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            Outstanding Quantity
                        </th>
                        <th>
                            Delivery Status
                        </th>
                    </tr>

                 
                </thead>
                <tbody>

                    @foreach (var item in @ViewBag.rel)
                    {
                        <tr>
                            <td>
                                @item.ItemNo
                            </td>
                            <td>
                                @item.Quantity
                            </td>
                            <td>
                                @item.OutstandingQuantity
                            </td>
                            <td>
                                @item.DeliveryStatus
                            </td>
                           
                        </tr>
                    }

                </tbody>
             

                </table>


        



            <h3>
                Descriptions:
            </h3>

            <p>
                Donec id elit non mi porta gravida at eget metus. Fusce dapibus, tellus ac cursus commodo, tortor mauris condimentum nibh, ut fermentum massa justo sit amet risus. Etiam
            </p>
            <p>
                <a class="btn" href="#">View details »</a>
            </p>
        </div>
    </div>
</div>